{
    "name": "todoist-mcp",
    "version": "1.2.4",
    "description": "Todoist MCP Server",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "todoist-mcp": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "prebuild": "node scripts/generate-version.js",
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "lint": "eslint src/**/*.ts",
        "prepublishOnly": "npm run build",
        "link": "npm link",
        "unlink": "npm unlink",
        "format": "prettier --write \"src/**/*.{js,ts}\"",
        "lint-fix": "eslint --fix \"src/**/*.ts\"",
        "fix-all": "npm run format && npm run lint-fix"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "todoist"
    ],
    "author": "stanislavlysenko0912",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stanislavlysenko0912/todoist-mcp-server.git"
    },
    "bugs": {
        "url": "https://github.com/stanislavlysenko0912/todoist-mcp-server/issues"
    },
    "homepage": "https://github.com/stanislavlysenko0912/todoist-mcp-server#readme",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.1.1",
        "uuid": "^9.0.1",
        "zod": "^3.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/node": "^20.0.0",
        "@types/uuid": "^10.0.0",
        "@vitest/coverage-v8": "^3.2.3",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "tsx": "^4.19.2",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.28.0",
        "vite": "^6.3.5",
        "vitest": "^3.2.3"
    }
}
